<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">コメントを書いて下さい</h1>
        <%= form_for @comment do |f| %>


        <div class="form-group">
          <%= f.label :"1行目(4~6文字)" %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :"2行目(6~8文字)" %>
          <%= f.text_area :body2, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :"3行目(4~6文字)" %>
          <%= f.text_area :body3, class: 'form-control' %>
        </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          <%= f.hidden_field :topic_id, value: @comment.topic_id %>

        <% end %>
      </div>
    </div>
  </div>
</div>
